{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run ES6 Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/ts-mocha/bin/ts-mocha",
      "stopOnEntry": false,
      "args": ["./src/${fileBasename}", "--require", "@babel/register", "--reporter", "spec", "--no-timeouts"],
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true
    }
  ]
}
